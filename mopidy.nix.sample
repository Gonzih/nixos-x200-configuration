{ config, pkgs, ... }:

{
  services.mopidy = {
    enable = true;
    extensionPackages = [ pkgs.mopidy-spotify pkgs.mopidy-moped ];
    configuration = ''
      [local]
      enabled = true
      media_dir = /home/user/Music

      [spotify]
      enabled = true
      username = username
      password = password
      bitrate = 320
      timeout = 10
      volume_normalization = false
      cache_dir = /media/extra_storage
    '';
  };

}

